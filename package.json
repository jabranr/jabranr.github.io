{
  "name": "@jabraf/personal-website",
  "version": "3.0.0",
  "description": "Jabran Rafique's personal website and blog",
  "main": "index.js",
  "scripts": {
    "start": "run-p dev:*",
    "preview": "NODE_ENV=production eleventy --serve --port=8080",
    "dev:watch": "NODE_ENV=development eleventy --serve",
    "dev:css": "run-p css:*",
    "css:main": "tailwindcss -w -i ./styles/main.css -o ./public/main.css",
    "css:resume": "tailwindcss -w -i ./styles/resume.css -o ./public/resume.css",
    "build:css": "tailwindcss -m -i ./styles/main.css -o ./public/main.css && tailwindcss -m -i ./styles/resume.css -o ./public/resume.css",
    "build": "NODE_ENV=production eleventy",
    "prebuild": "npm run build:css && npm run build:version",
    "build:version": "GIT_VERSION=$(git rev-parse HEAD 2> /dev/null | head -c 7 || echo \"dev\") && echo \"$GIT_VERSION\" > version.txt",
    "test": "playwright test",
    "test:headed": "npm run test -- --headed",
    "test:ui": "npm run test -- --ui",
    "test:report": "playwright show-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jabranr/jabranr.github.io.git"
  },
  "keywords": [
    "blog",
    "website",
    "Jabran",
    "Rafique"
  ],
  "bugs": {
    "url": "https://github.com/jabranr/jabranr.github.io/issues"
  },
  "private": true,
  "homepage": "https://jabran.me",
  "author": {
    "name": "Jabran Rafique",
    "email": "hello@jabran.me"
  },
  "prettier": "@jabraf/prettier",
  "license": "MIT",
  "devDependencies": {
    "@jabraf/prettier": "^3.0.1",
    "@playwright/test": "^1.58.0",
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "autoprefixer": "^10.4.23",
    "cloudflare": "^5.2.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "eleventy-plugin-time-to-read": "^1.3.0",
    "husky": "^9.1.7",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "pretty-quick": "^4.2.2",
    "prismjs": "^1.30.0",
    "tailwindcss": "^3.4.19"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "volta": {
    "node": "22.17.0"
  }
}
